
@{
    ViewBag.Title = "Buscar por fecha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <style>
        .col-md-8 {
            background-color: #31312F;
            border-radius: 7px;
            color: white;
            margin-top: 25px;
        }

        input[type="text"] {
            border: none;
            border-bottom: 1px solid #fff;
            background: transparent;
            outline: none;
            height: 40px;
            color: #fff;
            font-size: 16px;
        }
        body {
            background: linear-gradient(30deg, crimson,sienna, royalblue, indianred, purple);
        }
    </style>

<div class="col-md-8">
    <h2>Generar reporte documentos por lapso de tiempo</h2>
    <hr />
    <form action="/Reportes/RptLapseTime" method="post">
        <div class="input-group flex-nowrap">
            <label>Desde fecha</label>
            <input type="text" name="desde" class="form-control" placeholder="D/M/YYYY">
            <br /><br /><br />
            <label>Hasta fecha</label>
            <input type="text" name="hasta" class="form-control" placeholder="D/M/YYYY">
            <br /><br /><br /><br />
            <button class="btn btn-info">Buscar Documentos <i class="fas fa-search"></i></button>
        </div>
        <hr />
    </form>
</div>
<div class="col-md-4">
    <br />
    <img src="~/imagenes/undraw_Mobile_app_re_catg.svg" alt="vector" width="430" />
</div>

