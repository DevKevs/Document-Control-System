
@{
    ViewBag.Title = "Formulario filtro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <style>
        .col-md-8 {
            background-color: #31312F;
            border-radius: 7px;
            color: white;
            margin-top: 25px;
        }
        input[type="text"] {
            border: none;
            border-bottom: 1px solid #fff;
            background: transparent;
            outline: none;
            height: 40px;
            color: #fff;
            font-size: 16px;
        }
        body {
            background: linear-gradient(30deg, crimson,sienna, royalblue, indianred, purple);
        }
    </style>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h2>Buscar documentos por empleado</h2>
                <hr />
                <form action="/Reportes/RptUserDocx" method="post">
                    <div class="input-group flex-nowrap">
                        <label>Nombre del empleado</label>
                        <input type="text" name="name" class="form-control" placeholder="Empleado">
                        <br /><br /><br /><br />
                        <button class="btn btn-info">Buscar Empleado <i class="fas fa-search"></i></button>
                    </div>
                    <hr />
                </form>
            </div>

            <div class="col-md-4">
                <br />
                <img src="~/imagenes/undraw_My_location_re_r52x.svg" alt="vector" width="400" />
            </div>
        </div>
    </div>



